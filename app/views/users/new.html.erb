<% provide(:title,"Sign Up") %>
<div class="new-post">
    <h1> Sign Up </h1>

    <%= form_for :user, url: users_path do |f| %>

      <p>
      <%= f.label :username %>
      <br>
      <%= f.text_field :username %>
      </p>
      <p>
      <%= f.label :email%>
      <br>
      <%= f.text_field :email %>
      </p>
      
      <p>
      <%= f.label :password %>
      <br>
      <%= f.text_field :password %>
      </p>
      <%= f.submit :class => "action-buttons" %>

    <% end %>

</div>
