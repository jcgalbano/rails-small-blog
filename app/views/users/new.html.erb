<% provide(:title,"Create User") %>
<div class="new-post">
    <h1> Create User </h1>
    <strong> This file lives in app/views/users/new.html.erb/ </strong>
    <br>
    <br>
    <%= form_for :user, url: users_path do |f| %>

      <p>
      <%= f.label :username %>
      <br>
      <%= f.text_field :username %>
      </p>
      <p>
      <%= f.label :email%>
      <br>
      <%= f.text_field :email %>
      </p>
      
      <p>
      <%= f.label :password %>
      <br>
      <%= f.password_field :password %>
      </p>
      <%= f.submit :class => "action-buttons" %>

    <% end %>

</div>
