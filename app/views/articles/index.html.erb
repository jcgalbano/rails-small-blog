<div class="jumbotron">
  <h1>Welcome to the Articles Page</h1>
  <p> This file lives in /app/views/articles/index.html.erb/</p><br>
</div>
<% @articles.each do |article|%>
  <div class='article-box'>

    <strong>Title: </strong>
    <%= article[:title]%> 
    
    <br>

    <strong>Text: </strong>
    <%= article[:text]%>

    <br>
    <button class="btn btn-secondary">
      <%= link_to "View", '/articles/'+ article[:id].to_s%> 
    </button>

  </div>

  <br><br>

<%end%>
