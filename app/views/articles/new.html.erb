<div class='new-post'>

  <h1> New Article </h1>


    <%= form_for :article, url: articles_path do |f| %>
        
        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </p>

        <p>
          <%= f.label :text %><br>

          <div class='content-text'>
            <%= f.text_area :text %>
          </div>
        </p>

        <p>
          <%= f.submit %>
        </p>

      <% end%>

</div>

